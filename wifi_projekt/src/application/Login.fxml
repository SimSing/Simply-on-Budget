<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginAnchorPane" prefHeight="334.0" prefWidth="300.0" style="-fx-background-color: GAINSBORO;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <Button fx:id="loginButton" layoutX="28.0" layoutY="167.0" mnemonicParsing="false" onAction="#onLoginButtonPressed" prefHeight="30.0" prefWidth="245.0" style="-fx-background-radius: 10;" text="Login" />
      <Button fx:id="exitButton" layoutX="28.0" layoutY="290.0" mnemonicParsing="false" onAction="#onExitButtonPressed" prefHeight="30.0" prefWidth="245.0" style="-fx-background-radius: 10;" text="Exit" />
      <Line endX="85.0" fill="BLACK" layoutX="130.0" layoutY="128.0" startX="-100.0" />
      <Line endX="85.0" layoutX="130.0" layoutY="75.0" startX="-100.0" />
      <Button fx:id="createAccountButton" layoutX="28.0" layoutY="208.0" mnemonicParsing="false" onAction="#onCreateAccountButtonPressed" prefHeight="30.0" prefWidth="245.0" style="-fx-background-radius: 10;" text="Create Account" />
      <TextField fx:id="userTextField" alignment="BOTTOM_LEFT" layoutX="32.0" layoutY="47.0" onKeyPressed="#onKeyPressed" prefHeight="25.0" prefWidth="181.0" promptText="Username">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordField" alignment="BOTTOM_LEFT" layoutX="32.0" layoutY="100.0" onKeyPressed="#onKeyPressed" prefHeight="25.0" prefWidth="181.0" promptText="Password">
         <font>
            <Font size="16.0" />
         </font></PasswordField>
   </children>
   <effect>
      <Blend mode="MULTIPLY" />
   </effect>
</AnchorPane>
