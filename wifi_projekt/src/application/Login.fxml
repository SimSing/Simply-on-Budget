<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="loginAnchorPane" prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutY="20.0" prefHeight="45.0" prefWidth="300.0">
         <children>
            <Label text="User:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="userTextField" prefWidth="100.0">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutY="70.0" prefHeight="45.0" prefWidth="300.0">
         <children>
            <Label text="Password:">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" prefWidth="100.0">
               <HBox.margin>
                  <Insets left="74.0" />
               </HBox.margin>
            </PasswordField>
         </children>
      </HBox>
      <Button fx:id="loginButton" layoutX="48.0" layoutY="161.0" mnemonicParsing="false" onAction="#onLoginButtonPressed" prefWidth="50.0" text="Login" />
      <Label fx:id="newProfileLabel" layoutX="94.0" layoutY="130.0" onMouseClicked="#onNewProfileLabelPressed" onMouseEntered="#onNewProfileLabelHovered" text="New? Create Profile" textFill="#212dad" />
      <Button fx:id="exitButton" layoutX="202.0" layoutY="161.0" mnemonicParsing="false" onAction="#onExitButtonPressed" prefWidth="50.0" text="Exit" />
   </children>
</AnchorPane>
