<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.IncomeDetailsController">
   <children>
      <AnchorPane fx:id="incomeDetailsAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0">
         <children>
            <ComboBox fx:id="categoryComboBox" layoutX="14.0" layoutY="38.0" prefHeight="25.0" prefWidth="112.0" promptText="Category:" />
            <TextField fx:id="amountTextField" layoutX="191.0" layoutY="38.0" prefHeight="25.0" prefWidth="73.0" />
            <Label layoutX="21.0" layoutY="100.0" prefHeight="30.0" prefWidth="67.0" text="Comment:" AnchorPane.leftAnchor="21.0" />
            <TextField fx:id="commentTextField" layoutX="191.0" layoutY="103.0" prefHeight="25.0" prefWidth="73.0" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="negativeInputAnchorPane" prefHeight="200.0" prefWidth="300.0" style="visibility: false;">
         <children>
            <HBox prefHeight="54.0" prefWidth="300.0">
               <children>
                  <Label fx:id="negativeNumberLabel" alignment="CENTER" prefHeight="50.0" prefWidth="300.0" text="   You are about to input a negative number. " wrapText="true">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="confirmationLabel" alignment="CENTER" contentDisplay="CENTER" layoutY="60.0" prefHeight="20.0" prefWidth="300.0" text="Are you sure?">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Button fx:id="yesButton" layoutX="91.0" layoutY="108.0" mnemonicParsing="false" onAction="#onYesButtonPressed" prefWidth="50.0" text="Yes" />
            <Button fx:id="noButton" layoutX="184.0" layoutY="108.0" mnemonicParsing="false" onAction="#onNoButtonPressed" prefWidth="50.0" text="No" />
         </children>
      </AnchorPane>
      <HBox alignment="CENTER" layoutY="150.0" prefHeight="50.0" prefWidth="300.0">
         <children>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonPressed" prefWidth="50.0" text="Exit">
               <HBox.margin>
                  <Insets right="42.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonPressed" prefWidth="50.0" text="Save" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonPressed" prefWidth="50.0" text="Add">
               <HBox.margin>
                  <Insets left="42.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
